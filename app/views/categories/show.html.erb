<h1><%= @category.name %></h1>
<section>

	<% @category.links.each do |l| %>

	<div class="link">

			<div class="details">
				<h3><%= link_to l.name, l.url %></h3>
				<p><%= l.description %></p>
				<p><%= link_to l.url, l.url %></p>
			</div>

			<div class="actions">
				<%= link_to "Edit", edit_category_link_path(@category, l), class: "edit" %>

				<%= link_to "Duplicate",
					new_category_link_path(@category, duplicate_id: l.id) %>

				<%= link_to "delete", category_link_path(@category, l),
				 method: :delete, class: "delete", confirm: "Are you sure?" %>
				
			</div>

	</div>

	<% end %>

</section>
<%= link_to "add new link", new_category_link_path(@category), class: "button" %>
<%= link_to "Back to the category list", root_path, class: "button-back" %>